<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default_realm action bar background -->
        <item name="colorPrimary">@color/primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- colorAccent is used as the default_realm value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">sans-serif</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="NumberPickerTextColorStyle">
        <item name="android:textColorPrimary">@color/primary</item>
    </style>

    <style name="font_style">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>